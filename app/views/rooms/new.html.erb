<% provide(:title, 'New Room') %>
<h1>Create a new room</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@room, url: newroom_path) do |f| %>
      <%= render 'shared/error_messages_room' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :capacity %>
      <%= f.number_field :capacity, class: 'form-control' %>


      <%= f.submit "Create Room", class: "btn btn-info btn-lg" %>
    <% end %>
  </div>
</div>
